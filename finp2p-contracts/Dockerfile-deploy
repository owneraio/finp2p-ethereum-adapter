# syntax=docker/dockerfile:1

FROM node:20-slim AS builder
ENV NODE_ENV=development
WORKDIR /usr/app

# System deps (adjust if you need more)
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates git openssh-client bash \
  && rm -rf /var/lib/apt/lists/*

# Install dependencies
COPY package.json package-lock.json ./
RUN npm ci

# Copy source
COPY . .

# Build TypeScript if a build script exists
RUN npm run compile
RUN npm run test
RUN npm run build

# keeping alpine as main adapter is also alpine
FROM node:20-alpine AS base
WORKDIR /usr/app

# ------- Production dependencies --------
FROM base AS dependencies
COPY package.json package-lock.json ./
RUN npm ci --production

# ------- Release ----------
FROM base AS release
LABEL org.opencontainers.image.source=https://github.com/owneraio/finp2p-ethereum-adapter
ENV NODE_ENV=production

# Copy runtime files and node_modules
COPY package.json package-lock.json ./
COPY --from=dependencies /usr/app/node_modules ./node_modules
COPY --from=builder /usr/app/dist ./dist

# Expect env vars to be provided at runtime:
# DEPLOYER_PRIVATE_KEY, RPC_URL, OPERATOR_ADDRESS, PAYMENT_ASSET_CODE

# Run the deploy script that reads env vars
CMD ["node", "./dist/scripts/deploy.js"]
