{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "artifacts/contracts/**/*.json",
    "typechain-types/**/*.ts",
  ],
  "exclude": [
    "test/**",
    "scripts/**"
  ]
}
