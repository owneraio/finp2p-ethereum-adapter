{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "files": [
    "hardhat.config.ts"
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "artifacts/contracts/**/*.json",
    "typechain-types/**/*.ts"
  ]
}
